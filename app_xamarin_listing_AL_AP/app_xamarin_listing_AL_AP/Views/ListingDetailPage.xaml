<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_xamarin_listing_AL_AP.Views.ListingDetailPage"
             xmlns:i18n="clr-namespace:app_xamarin_listing_AL_AP.Ressources;assembly=app_xamarin_listing_AL_AP"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Listing.Title}" FontSize="Large" />

        <Label Text="{i18n:Translate Description}" FontSize="Small" />
        <Label Text="{Binding Listing.Description}" FontSize="Small" />
        <Label Text="{Binding Listing.CategoryName}" FontSize="Small" />
        <Label Text="{Binding Listing.Price}" FontSize="Small" />

        <Button IsVisible="{Binding ActiveSendButton}" Command="{Binding SendMessageCommand}" Text="{i18n:Translate SendMessage}"></Button>
    </StackLayout>
</ContentPage>