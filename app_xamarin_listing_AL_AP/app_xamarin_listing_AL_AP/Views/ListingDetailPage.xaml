<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_xamarin_listing_AL_AP.Views.ListingDetailPage"
             xmlns:i18n="clr-namespace:app_xamarin_listing_AL_AP.Ressources;assembly=app_xamarin_listing_AL_AP"
             Title="{Binding Title}">

    <StackLayout Style="{StaticResource StackLayoutFormStyle}">
        <Label Style="{StaticResource LabelTitleWhite}" Text="{Binding Listing.Title}" />
        <Label Style="{StaticResource LabelDescriptionWhite}" Text="{Binding Listing.Description}" />
        <Label Style="{StaticResource LabelCategoryWhite}" Text="{Binding Listing.CategoryName}" />
        <Label Style="{StaticResource LabelPriceWhite}" Text="{Binding Listing.Price}" />
        <Button Style="{StaticResource ButtonOrangeStyle}" IsVisible="{Binding ActiveSendButton}" Command="{Binding SendMessageCommand}" Text="{i18n:Translate SendMessage}"></Button>
    </StackLayout>
</ContentPage>